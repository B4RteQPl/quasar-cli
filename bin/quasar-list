#!/usr/bin/env node

var
  ora = require('ora'),
  log = require('../lib/log'),
  getList = require('../lib/template-list'),
  spinner

spinner = ora('Retrieving App template list...')
spinner.start()

getList(function (err, data) {
  spinner.stop()

  if (err) {
    log.fatal('Could not retrieve App template list: ' + err)
    // ^^^ EARLY EXIT
  }

  log(' Available Quasar App templates:')
  log()

  var templates = JSON.parse(data)

  templates.official.forEach(function (template) {
    log('  â˜… ' + template.name)
    log('    ' + template.description.gray)
  })
})
