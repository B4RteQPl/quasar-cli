#!/usr/bin/env node
'use strict';

var program  = require('commander');

process.on('exit', function(code) {
  program.log();
});

require('../lib/logger')(program);
require('../lib/helpers')(program);

program.log();

require('autocmdr/lib/loader')(program);
require('autocmdr/lib/package')(program);
require('autocmdr/lib/help')(program);

program.parse(process.argv);

if (program.args.length < 1) {
  program.log(require('fs').readFileSync(require('path').join(__dirname, '../lib/logo.art'), 'utf8'));
  program.outputHelp();
  process.exit(1);
}
