{
  "extends": "defaults/configurations/google",

  "env": {
    "browser": 0,
    "node": 1
  },

  "globals": {
    "require": 1,
    "$": 1,

    "moquire": 1,
    "expect": 1,
    "sinon": 1,
    "describe": 1,
    "it": 1,
    "before": 1,
    "after": 1,
    "beforeEach": 1,
    "afterEach": 1
  },

  "rules": {
    "max-len": [1, 120, 4],
    "no-invalid-this": 0,
    "dot-location": 0,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }]
  }
}
